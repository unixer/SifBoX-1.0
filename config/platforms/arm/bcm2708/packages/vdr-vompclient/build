#!/bin/sh

. config/options

export MAKEFLAGS=-j1

get_meta $1

$SCRIPTS/build vdr

VDR_DIR=`basename $BUILD/vdr-1*`

CXXFLAGS="$CXXFLAGS -fpermissive -Wsign-compare"
echo $CXXFLAGS
cd $PKG_BUILD_DIR
pwd
make \
  CECDIR="$SYSROOT_PREFIX/usr/local" \
  VCDIR="$SYSROOT_PREFIX/usr/local" \
  VDRDIR="../$VDR_DIR"

make all \
  VDRDIR="../$VDR_DIR" \
  LIBDIR="."

pwd
read enterKey
