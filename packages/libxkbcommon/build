#!/bin/sh

. config/options

#export LD_LIBRARY_PATH=$SYSROOT_PREFIX/lib:$SYSROOT_PREFIX/usr/local/lib:$SYSROOT_PREFIX/usr/lib:$LD_LIBRARY_PATH


get_meta $1
cd $PKG_BUILD_DIR

setup_toolchain target
$AUTORECONF -if

do_configure target --with-xkb-config-root=/usr/share/X11/xkk \
        --host=$TARGET_NAME \
        --build=$HOST \
        --target=$HOST \

make
make_install
