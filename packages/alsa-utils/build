#!/bin/sh

. config/options
get_meta $1

cd $PKG_BUILD_DIR

if pkg_uses $1 devtools; then
  DEVTOOLS_CONFIG="--enable-alsamixer --with-curses=ncurses"
else
  DEVTOOLS_CONFIG="--disable-alsamixer --without-curses"
fi

#do_configure \
#  --disable-dependency-tracking \
#  --disable-xmlto \
#  $DEVTOOLS_CONFIG \

do_configure \
	--disable-dependency-tracking \
	--disable-xmlto \
	--disable-alsaloop \
	--enable-alsatest \
	--disable-nls

make
make_install

