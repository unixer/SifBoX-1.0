#!/bin/sh

. config/options
get_meta $1

. config/options

$SCRIPTS/build vdr

VDR_DIR=`basename $BUILD/vdr-1*`

cd $BUILD/${PKG_NAME}-${PKG_VERSION}
make \
  VDRDIR="../$VDR_DIR" \
  LIBDIR="." \
  LOCALEDIR="./locale"

get_meta vdr
verlte 1.7.36 $PKG_VERSION && VDRINS="no" || VDRINS="yes"
if [ $VDRINS = "yes" ]; then
  make_install
else
  do_strip bin lib$1.so.*
fi

