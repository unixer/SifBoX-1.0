#!/bin/sh

. config/options

get_meta $1 
cd $PKG_BUILD_DIR

mkdir -p $INSTALL/usr/include
mkdir -p $INSTALL/usr/lib
#cp libcedarv/linux-armhf/libcedarv/libcedarv.h $SYSROOT_PREFIX/usr/local/include
#cp libcedarv/linux-armhf/libvecore/libve_typedef.h $SYSROOT_PREFIX/usr/local/include
#cp libcedarv/linux-armhf/adapter/os_adapter.h $SYSROOT_PREFIX/usr/local/include
#cp libcedarv/linux-armhf/drv_display_sun4i.h $SYSROOT_PREFIX/usr/local/include
#cp libcedarv/linux-armhf/libvecore/libve_adapter.h $SYSROOT_PREFIX/usr/local/include

cp libcedarv/linux-armhf/libcedarv/libcedarv.h $INSTALL/usr/include
cp libcedarv/linux-armhf/libvecore/libve_typedef.h $INSTALL/usr/include
cp libcedarv/linux-armhf/adapter/os_adapter.h $INSTALL/usr/include
cp libcedarv/linux-armhf/drv_display_sun4i.h $INSTALL/usr/include
cp libcedarv/linux-armhf/libcedarv.a $INSTALL/usr/lib
cp libcedarv/linux-armhf/libvecore/libvecore.so $INSTALL/usr/lib
cp libcedarv/linux-armhf/libvecore/libve_adapter.h $INSTALL/usr/include
