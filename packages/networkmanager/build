#!/bin/sh

. config/options
get_meta $1

cd $PKG_BUILD_DIR
autoreconf --install --force
intltoolize --force
autoreconf
do_configure --with-distro=debian                             \
             --with-crypto=gnutls                             \
             --disable-more-warnings                          \
             --with-dhclient=usr/sbin/dhclient                \
             --with-iptables=/usr/sbin/iptables               \
             --with-tests                                     \
             --with-systemdsystemunitdir=/lib/systemd/system \
             --enable-ppp
             
             
make
make_install
