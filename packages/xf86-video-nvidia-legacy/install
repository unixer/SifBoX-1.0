#!/bin/sh

. config/options

require_glibc $1

cd $BUILD/$1*

do_install lib
do_install usr/lib
do_install usr/bin

mkdir -p $INSTALL/usr/lib/xorg/gpu
cp -P $ROOT/$PACKAGES/$1/scripts/gpu $INSTALL/usr/lib/xorg/gpu/nvidia.sh

mkdir -p $INSTALL/etc/X11/gpu
cp -P $ROOT/$PACKAGES/$1/config/90-nvidia-legacy.conf $INSTALL/etc/X11/gpu

