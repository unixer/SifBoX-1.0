#!/bin/sh

. config/options

get_meta vdr
VDR_VERSION=$PKG_VERSION

$SCRIPTS/build vdr

VDR_DIR=`basename $BUILD/vdr-1*`

cd $BUILD/$1*
sed -i "/### The directory environment:/a VDRDIR=\"../vdr-$VDR_VERSION\"" Makefile

make all \
  VDRDIR="../$VDR_DIR" \
  LIBDIR="." \
  LOCALEDIR="./locale"

do_strip bin lib$1.so.*

