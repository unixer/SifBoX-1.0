#!/bin/sh

. config/options

cd $BUILD/$1*

do_install usr/lib/xorg/modules/drivers/*_drv.so

mkdir -p $INSTALL/usr/lib/xorg/gpu
cp -P $ROOT/$PACKAGES/$1/scripts/gpu $INSTALL/usr/lib/xorg/gpu/vcos.sh

mkdir -p $INSTALL/etc/X11/gpu
#cp -P $ROOT/$PACKAGES/$1/config/30_mode_1920x1080_24Bit.conf $INSTALL/etc/X11/gpu
cp -P $ROOT/$PACKAGES/$1/config/30_mode_1920x1080_50.conf $INSTALL/etc/X11/gpu
#cp -P $ROOT/$PACKAGES/$1/config/60_disable_composite.conf $INSTALL/etc/X11/gpu

