#!/bin/sh

. config/options

get_meta $1

cd $PKG_BUILD_DIR

fix_png_config () {
  for i in libpng libpng16; do
    sed -i "s%^libdir=.*%libdir=\"$LIB_PREFIX/lib\"%" \
      .install/usr/bin/$i-config
    sed -i "s%^includedir=.*%includedir=\"$LIB_PREFIX/include/libpng16\"%" \
      .install/usr/bin/$i-config
  done
}

mkdir -p objdir-host
setup_toolchain host

cd objdir-host
export CPPFLAGS="$CPPFLAGS -I$ROOT/$TOOLCHAIN/include"

../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
	     --prefix=/usr \
             --disable-static \
             --enable-shared \


make
make_install toolchain
fix_png_config
cd ..

mkdir -p objdir-target
cd objdir-target
setup_toolchain target
../configure --host=$TARGET_NAME \
              --build=$HOST_NAME \
              --prefix=/usr \
              --sysconfdir=/etc \
              --localstatedir=/var \
              --enable-shared --enable-static
make
make_install
fix_png_config
