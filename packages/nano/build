#!/bin/sh

. config/options

cd $BUILD/$1*
do_configure \
  --enable-largefile \
  --disable-nls \
  --disable-debug \
  --disable-extra \
  --disable-browser \
  --disable-help \
  --disable-justify \
  --disable-mouse \
  --disable-operatingdir \
  --disable-speller \
  --disable-tabcomp \
  --disable-wrapping \
  --disable-wrapping-as-root \
  --enable-color \
  --disable-multibuffer \
  --enable-nanorc \
  --disable-utf8 \
  --enable-altrcname=/etc/nanorc \
  --disable-glibtest \
  --with-slang=/root/openrasp/build/build.raspberrypi.eglibc/toolchain/armv6-openbricks-linux-gnueabihf/sysroot/usr/local/lib \
  --with-gnu-ld \
  CFLAGS="$CFLAGS -I$SYSROOT_PREFIX/usr" \
  LIBS="$LIBS -lz"


make
make_install

if [ $TARGET_ARCH = arm ] ; then
  sed -e"s/\\\</\\\b/g" -e"s/\\\>/\\\b/g" -i .install/usr/share/nano/*.nanorc
fi
