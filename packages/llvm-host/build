#!/bin/sh

. config/options

get_meta $1

$SCRIPTS/unpack $PKG_PARENT

cd $BUILD/${PKG_PARENT}-${PKG_VERSION}

cd autoconf
aclocal --force --verbose -I m4
autoconf -v -f -I m4 -o ../configure
cd ..

cd projects/sample/autoconf
aclocal --force --verbose -I m4
autoconf --force --verbose -I m4 -o ../configure

cd ../../..

mkdir -p objdir-target
cd objdir-target

mkdir -p BuildTools && cd BuildTools

[ "$TARGET_ARCH" = i386 ] && ARCH=x86 || ARCH=$TARGET_ARCH

do_configure host \
             --disable-polly \
             --enable-optimized \
             --disable-profiling \
             --disable-assertions \
             --disable-expensive-checks \
             --disable-debug-runtime \
             --disable-debug-symbols \
             --enable-jit \
             --disable-docs \
             --disable-doxygen \
             --enable-threads \
             --enable-pthreads \
             --enable-pic \
             --enable-shared \
             --enable-embed-stdcxx \
             --enable-timestamps \
             --enable-targets=$ARCH \
             --disable-libffi \
             --enable-ltdl-install \

cd ..

make -C BuildTools BUILD_DIRS_ONLY=1 CFLAGS= CXXFLAGS=

#make_install toolchain

mkdir -p $ROOT/$PKG_BUILD_DIR
mkdir -p .install
mv .install $ROOT/$PKG_BUILD_DIR

