#!/bin/sh
echo "Post install:"
echo "  stoping vdr"
systemctl stop vdr.service
if cat /etc/vdr/plugins/menuorg.xml |grep SifBoxConfigurator > /dev/null; then
  echo "SifBoxPresente"
else
  sed -i '/^         <menu name="Remote wakeup">/i\         <command name="SifBoxConfig" execute="/usr/bin/SifBoxConfigurator.sh" />' /etc/vdr/plugins/menuorg.xml 
fi
systemctl start vdr.service
