#!/bin/sh

. config/options

cd $BUILD/$1*

export ac_cv_func_malloc_0_nonnull=yes
do_autoconf
do_configure

make
make_install

mkdir -p .install/usr/include/afpfs-ng/ .install-unstripped/usr/include/afpfs-ng
cp include/* .install/usr/include/afpfs-ng/
cp include/* .install/usr/include/

cp include/* .install-unstripped/usr/include/afpfs-ng/
cp include/* .install-unstripped/usr/include/