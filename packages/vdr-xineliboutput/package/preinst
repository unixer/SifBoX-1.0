#!/bin/sh

echo "Pre install:"
echo "  Stopping VDR - Video Disk Recorder... "
if [ -f /etc/vdr/plugins.d/50_xineliboutput ]; then
  /bin/systemctl stop vdr-sxfe.service
fi
if [ -f /etc/vdr/plugins.d/50_xine ]; then
  /bin/systemctl stop vdr-xine.service
fi
/bin/systemctl stop vdr.service
if [ -f /etc/vdr/plugins.d/50_xine ]; then
  echo "  Remove xine... "
  rm /var/lib/opkg/lock
  opkg remove vdr-xine
  touch /var/lib/opkg/lock
  sleep 2
fi
if [ -f /etc/vdr/plugins.d/50_softhddevice ]; then
  echo "  Remove softhddevice... "
  rm /var/lib/opkg/lock 
  opkg remove vdr-softhddevice
  touch /var/lib/opkg/lock
fi
sleep 2
echo "  Done."
