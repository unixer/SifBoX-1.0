#!/bin/sh

. config/options

get_meta linux
verlte 3.6.11 $PKG_VERSION && INSDVB="yes" || INSDVB="no"
if [ $INSDVB = "no" ]; then
   DVB_DIR=""
else
   DVB_DIR="../linux"
fi

$SCRIPTS/build vdr

VDR_DIR=`basename $BUILD/vdr-1*`

cd $BUILD
#ln -s vdr-dvbsddevice-* dvbsddevice

cd $1*
make all \
  VDRDIR="../$VDR_DIR" \
  DVBDIR=$DVB_DIR \
  LIBDIR="." \
  LOCALEDIR="./locale"

do_strip bin lib$1.so.*

