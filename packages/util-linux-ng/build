#!/bin/sh

. config/options
get_meta $1

export gt_cv_func_gnugettext1_libintl=no

TLS_CONFIG="--enable-tls"
[ $TARGET_LIBC = "uclibc" ] && TLS_CONFIG="--disable-tls"

cd $PKG_BUILD_DIR

mkdir -p objdir-host 
cd objdir-host
setup_toolchain host
do_configure host \
            --without-ncurses \
            --without-selinux \
            --disable-tls \
            --disable-wall \
            --disable-login \
            --disable-sulogin \
            --disable-su \


make
make_install toolchain
rm -f .install/usr/lib/lib*.so
cd ..

mkdir -p objdir-target
cd objdir-target
setup_toolchain target
do_configure target \
            --disable-login \
            --enable-sulogin \
            --disable-su \
	    --enable-arch \
	    --enable-agetty \
	    --disable-init \
	    --enable-kill \
	    --enable-rdev \
	    --disable-last \
	    --enable-mesg \
	    --enable-raw \
	    --enable-rename \
	    --enable-reset \
	    --enable-login-utils \
	    --enable-schedutils \
	    --enable-wall \
	    --enable-write \
	    --enable-use-tty-group \
	    --enable-setterm \
            $TLS_CONFIG \
	    --disable-runuser \
	    --disable-ul \
	    --disable-more \
	    --disable-pg \

make
make_install
