#!/bin/sh

. config/options

get_meta vdr
VDR_VERSION=$PKG_VERSION

get_meta $1

$SCRIPTS/build vdr

VDR_DIR=`basename $BUILD/vdr-1*`

cd $PKG_BUILD_DIR
if [ $PKG_URL_PROTO = "git" ]; then
  mv vdr-vdrmanager/* . || true
fi

make all \
  VDRDIR="../$VDR_DIR" \
  LIBDIR="." \
  LOCALEDIR="./locale" \

get_meta vdr
verlte 1.7.36 $PKG_VERSION && VDRINS="no" || VDRINS="yes"
VDRINS="no"
if [ $VDRINS = "yes" ]; then
  make_install
else
  do_strip bin lib$1.so.*
fi

