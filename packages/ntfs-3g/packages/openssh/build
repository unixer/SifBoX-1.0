#            --disable-shared \
#            --without-openssl-header-check \
#            --without-pam

do_configure 	--sysconfdir=/etc/ssh \
		--libexecdir=/usr/lib/openssh \
                --disable-strip \
                --disable-lastlog \
                --with-sandbox=no \
                --disable-utmp \
                --disable-utmpx \
                --disable-wtmp \
                --disable-wtmpx \
		--enable-shared \
                --without-rpath \
                --with-ssl-engine \
                --without-pam

#sed -i 's/^LIBS=/LIBS=-shared /g' Makefile

