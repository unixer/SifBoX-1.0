PKG_NAME=vdr-reelchannelscan
PKG_VERSION=0.6.2-1
PKG_URL="$SFNET_SRCS/openpctv/sources/vdr-reelchannelscan-${PKG_VERSION}.tar.xz"
PKG_REV=1
PKG_DEPENDS="vdr"
PKG_BUILD_DEPENDS="toolchain"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="VDR -- reelchannelscan plugin"
PKG_LONGDESC="vdr-reelchannelscan reads the <vdr-conf-path>/sources.conf and parses the coresponding transponderlist  (.tpl file), then it scans this sat and updates/appends all found channels to the current channel list."
