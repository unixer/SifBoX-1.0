#!/bin/sh

. config/options

get_meta linux
verlte 3.6.11 $PKG_VERSION && INSDVB="yes" || INSDVB="no"
if [ $INSDVB = "no" ]; then
   DVB_DIR=""
else
   DVB_DIR="../linux"
fi

$SCRIPTS/build vdr

VDR_DIR=`basename $BUILD/vdr-1*`

cd $BUILD/$1*
make all \
  VDRDIR="../$VDR_DIR" \
  DVBDIR=$DVB_DIR \
  LIBDIR="." \
  LOCALEDIR="./locale" \
  SKINELCHI_HAVE_IMAGEMAGICK=1 \
  SKINELCHI_USE_AVARDS_PLUGIN= \
  SKINELCHI_USE_EPGSEARCH_PLUGIN= \
  SKINELCHI_USE_MAILBOX_PLUGIN= \
  SKINELCHI_DEBUG=

do_strip bin lib$1.so.*
