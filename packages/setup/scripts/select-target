#!/bin/sh

export TERM=linux
. gettext.sh
export TEXTDOMAIN=openpctv


dialog --no-cancel --clear --title "$(gettext "Set the default target")" --menu "$(gettext "Please select the default target to boot into.")" 10 85 3 enigma2pc "$(gettext "An openpliPC project for PC,work well with NVIDIA/Intel/AMD Display card")" vdr "$(gettext "The Video Disk Recorder,work well with AMD/NVIDIA display card")" xbmc "$(gettext "Open Source Home Theatre Software, work well with Intel/AMD/NVIDIA display card")" 2> /tmp/target.tmp
target=$(cat /tmp/target.tmp)
rm /tmp/target.tmp
case $target in
  vdr)
    systemctl set-default vdr.target;;
  xbmc)
    systemctl set-default xbmc.target;;
  enigma2pc)
    systemctl set-default enigma2pc.target;
esac
