#!/bin/sh

. config/options

get_meta linux
verlte 3.6.11 $PKG_VERSION && INSDVB="yes" || INSDVB="no"
if [ $INSDVB = "no" ]; then
   DVB_DIR="$SYSROOT_PREFIX/usr/include"
else
   DVB_DIR="../linux"
fi

get_meta $1
$SCRIPTS/build vdr

VDR_DIR=`basename $BUILD/vdr-1*`

cd $PKG_BUILD_DIR

make \
  VDRDIR="../$VDR_DIR" \
  DVBDIR=$DVB_DIR \
  LIBDIR="." \
  LOCALEDIR="./locale"

do_strip bin lib$1.so.*


