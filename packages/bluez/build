#!/bin/sh

. config/options

cd $BUILD/$1*

if [ "$DEBUG" = yes ]; then
  DEBUG_CONFIG="--enable-debug"
else
  DEBUG_CONFIG="--disable-debug"
fi

if pkg_uses $1 alsa; then
  ALSA_CONFIG="--enable-alsa"
else
  ALSA_CONFIG="--disable-alsa"
fi

if pkg_uses $1 devtools; then
  DEVTOOLS_CONFIG="--enable-bccmd --enable-test --enable-tools"
else
  DEVTOOLS_CONFIG="--disable-bccmd --disable-test --disable-tools"
fi

do_configure \
            --prefix=/usr \
            --sysconfdir=/etc \
            --libexecdir=/usr/lib \
            --localstatedir=/var \
            --disable-dependency-tracking \
            --disable-silent-rules \
            --enable-shared \
            --disable-static \
            --enable-optimization \
            --enable-fortify \
            --disable-pie \
            --enable-network \
            --disable-sap \
            --disable-proximity \
            --disable-serial \
            --enable-input \
            --enable-service \
            --enable-health \
            --disable-pnat \
            --disable-gstreamer \
            $BLUEZ_ALSA \
            --enable-usb \
            --enable-datafiles \
            --enable-pcmcia \
            --enable-hid2hci \
            --enable-dfutool \
            --disable-hidd \
            --disable-pand \
            --disable-dund \
            --disable-cups \
            --enable-wiimote \
            --disable-maemo6 \
            --disable-dbusoob \
            --enable-thermometer \
            --disable-hal \
            --disable-capng \
            --with-gnu-ld \
            $DEBUG_CONFIG \
            $DEVTOOLS_CONFIG \
            --disable-test


#do_configure \
#            --disable-dependency-tracking \
#            --disable-network \
#            --disable-serial \
#            --disable-input \
#            --disable-audio \
#            --disable-service \
#            --disable-gstreamer \
#            $ALSA_CONFIG \
#            --disable-usb \
#            --disable-hidd \
#            --disable-pand \
#            --disable-dund \
#            --disable-configfiles \
#            --disable-udevrules \
#            $DEBUG_CONFIG \
#            $DEVTOOLS_CONFIG \

make
make_install
